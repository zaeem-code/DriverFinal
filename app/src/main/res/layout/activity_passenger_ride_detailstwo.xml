<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@android:color/transparent"
   android:paddingHorizontal="15dp"
    android:paddingTop="15dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageCusx"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/lightgray"
            app:civ_border_overlay="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"  />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_ratingx"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:text="4.25"
            android:layout_marginTop="9dp"
            android:textColor="@color/lightgray"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@+id/starx"
            android:textSize="14sp"

            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star"
            app:tint="@color/yellow"
            android:tint="@color/yellow"
            android:layout_marginTop="5dp"

            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:id="@+id/starx"
            tools:ignore="UseAppTint" />

        <TextView
            android:layout_below="@+id/txt_ratingx"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/txt_type_uberx"
            android:text="uber"
            android:textColor="@color/lightgray"
            android:textSize="17sp" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:layout_toRightOf="@+id/imageCusx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:id="@+id/custmernamex"

            android:text="Ali ahmad mistri"
            android:textColor="@color/lightgray"
            android:textSize="17sp"

            />




        <TextView
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imageCusx"
            android:layout_below="@+id/custmernamex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_estimate_distancex"
            android:layout_gravity="center_horizontal"
            android:text="0.4 km"
            android:textColor="@color/lightgray"
            android:textSize="16sp"
            />
        <TextView
            android:layout_marginTop="2dp"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/custmernamex"
            android:gravity="center"
            android:textColor="@color/lightgray"
            android:textStyle="bold"
            android:layout_marginHorizontal="5dp"
            android:layout_toEndOf="@+id/txt_estimate_distancex"
            android:background="@color/lightgray"
            android:id="@+id/divx"/>
        <TextView
            android:layout_toRightOf="@+id/divx"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/txt_estimate_timex"
            android:layout_gravity="center_horizontal"
            android:text=" min"
            android:layout_below="@+id/custmernamex"
            android:textColor="@color/lightgray"
            android:textSize="16sp"
            />



        <TextView
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/imageCusx"
            android:layout_marginTop="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:id="@+id/pickupx"
            android:text="Pickup"
            android:textColor="@color/lightgray"
            android:textSize="16sp"

            />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/pickupx"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="30dp"
            android:maxLines="1"

            android:layout_gravity="center_vertical"

            android:id="@+id/pickupaddx"
            android:text="Shalamar ChowkØŒ G. T. Road, Shalamar"

            android:textColor="@color/lightgray"
            android:textSize="15sp"

            />
    </RelativeLayout>

