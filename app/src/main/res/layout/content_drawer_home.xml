<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >





    <View
        android:id="@+id/snackbarView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >









    </fragment>






    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp"
        android:background="@drawable/cardview_background"
        android:layout_gravity="bottom"
        android:id="@+id/layout_accept"
        android:visibility="gone"

        ><LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:clickable="false"
            >

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/circularProgressBar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cpb_background_progressbar_color="#fff"
                app:cpb_background_progressbar_width="3dp"
                app:cpb_progress="0"
                app:cpb_progress_direction="to_right"
                app:cpb_progress_max="100"
                app:cpb_progressbar_color="#151828"
                app:cpb_progressbar_width="3dp"
                app:cpb_round_border="false" />



            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:clickable="false"
                android:src="@drawable/ic_baseline_person_24"
                android:id="@+id/img_round"

                />


        </RelativeLayout>


    </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:padding="16dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageCus"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/lightgray"
                app:civ_border_overlay="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"  />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_rating"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:text="4.25"
                android:textColor="@color/lightgray"
                android:textStyle="bold"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@+id/star"
                android:textSize="18sp"

                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star"
                app:tint="@color/yellow"

                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:id="@+id/star"/>

            <TextView
                android:layout_below="@+id/txt_rating"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:id="@+id/txt_type_uber"
                android:text="uber"
                android:textColor="@color/lightgray"
                android:textStyle="bold"
                android:textSize="18sp"

                />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp"
                android:layout_toRightOf="@+id/imageCus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:id="@+id/custmername"

                android:text="Ali ahmad mistri"
                android:textColor="@color/lightgray"
                android:textSize="18sp"

                />




            <TextView
android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/imageCus"
                android:layout_below="@+id/custmername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_estimate_distance"
                android:layout_gravity="center_horizontal"
                android:text="0.4 km"
                android:textColor="@color/lightgray"
                android:textSize="16sp"
                />
<TextView
    android:layout_marginTop="2dp"
    android:layout_width="1dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/custmername"
    android:gravity="center"
    android:textColor="@color/lightgray"
    android:textStyle="bold"
    android:layout_marginHorizontal="5dp"
    android:layout_toEndOf="@+id/txt_estimate_distance"
android:background="@color/lightgray"
    android:id="@+id/div"/>
            <TextView
                android:layout_toRightOf="@+id/div"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/txt_estimate_time"
                android:layout_gravity="center_horizontal"
                android:text="2 min"
                android:layout_below="@+id/custmername"
                android:textColor="@color/lightgray"
                android:textSize="16sp"
                />



            <TextView
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/imageCus"
                android:layout_marginTop="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:id="@+id/pickup"
                android:text="Pickup"
                android:textColor="@color/lightgray"
                android:textSize="16sp"

                />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/pickup"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="30dp"
                android:maxLines="1"

                android:layout_gravity="center_vertical"

                android:id="@+id/pickupadd"
                android:text="Shalamar ChowkØŒ G. T. Road, Shalamar"

                android:textColor="@color/lightgray"
                android:textSize="15sp"

                />
        </RelativeLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/cardview_background">
            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_centerVertical="true"
                android:layout_height="40dp"
                app:cardCornerRadius="8dp"
                android:layout_marginHorizontal="10dp"
                app:cardBackgroundColor="@color/red"
                android:layout_gravity="bottom"
                android:visibility="visible"


                >
            <Button
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/chip_decline"
                android:background="@android:color/transparent"
                android:text="Reject"/>
            </androidx.cardview.widget.CardView>





            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_height="40dp"
                app:cardCornerRadius="8dp"
                android:layout_marginHorizontal="10dp"
                app:cardBackgroundColor="@color/lightgray"
                android:layout_gravity="bottom"
                android:visibility="visible"


                >
                <Button
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/chip_acpt"
                    android:background="@android:color/transparent"
                    android:text="Accept"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>





    </LinearLayout>






<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_start_ubber"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    android:layout_gravity="bottom"
    android:visibility="gone"


    >


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_keyboard_arrow_down_24"

            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_start_uber"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_baseline_account_circle_24"

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 min"
            android:id="@+id/txt_start_uber_estimate_time"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/img_start_uber"

            />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 min"
            android:id="@+id/txt_start_uber_estimate_distance"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_start_uber"

            />



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_format_list_bulleted_24"
            />


    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimaryDark"

        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_notify_rider"
        android:visibility="gone"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_notify_rider"
            android:text="02:2"
            android:textSize="18sp"
            android:gravity="center_horizontal"

            />


        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:min="0"
            android:max="120"
            android:indeterminate="false"
            android:id="@+id/progress_notify"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"

            />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/img_phone_call"
            android:src="@drawable/ic_baseline_call_24"

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_rider_name"
            android:text="zaeem"
            android:textColor="#000"
            android:textSize="22sp"
            android:layout_centerInParent="true"

            />





        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/img_three_dot"
            android:src="@drawable/ic_baseline_more_vert_24"
            android:layout_alignParentRight="true"


            />





    </RelativeLayout>


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.kusu.library.LoadingButton
        android:id="@+id/btn_start_uber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="start uber"
        android:enabled="false"
        android:textColor="@color/white"
        app:lb_buttonColor="@color/colorPrimaryDark"
        app:lb_isShadowEnable="true"
        app:lb_isCircular="false"
        app:lb_shadowColor="@color/colorPrimaryDark"
        app:lb_shadowHeight="5dp"

        />



    <com.kusu.library.LoadingButton
        android:id="@+id/btn_complete_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="complete trip"
        android:enabled="false"
        android:textColor="@color/white"
        app:lb_buttonColor="@color/colorPrimaryDark"
        app:lb_isShadowEnable="true"
        app:lb_isCircular="false"
        app:lb_shadowColor="@color/colorPrimaryDark"
        app:lb_shadowHeight="5dp"

        />



</FrameLayout>








</LinearLayout>



</androidx.cardview.widget.CardView>









</FrameLayout>